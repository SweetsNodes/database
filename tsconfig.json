{
    "compilerOptions": {
        "lib": ["ESNext", "dom"],
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "ESNext",
        "outDir": "lib",
        "sourceMap": false,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "resolveJsonModule": true,
        "importHelpers": false,
        "declaration": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "test"]
}
